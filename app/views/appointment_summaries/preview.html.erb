<div class="confirm">
  <p class="highlight highlight-orange">Check the details below and click Submit if they're correct</p>
</div>

<%= @output_document.html.html_safe %>

<%= form_for @appointment_summary, url: appointment_summaries_path(format: :pdf) do |f| %>

  <% [:title, :first_name, :last_name,
      :date_of_appointment,
      :guider_name, :guider_organisation,
      :address_line_1, :address_line_2, :address_line_3, :county, :town, :postcode,
      :has_defined_contribution_pension,
      :supplementary_benefits, :supplementary_debt, :supplementary_ill_health, :supplementary_defined_benefit_pensions].each do |field| %>
    <%= f.hidden_field field %>
  <% end %>

  <div class="fixed-bar">
    <%= f.submit 'Submit', class: %w(btn btn-success t-confirm btn-lg) %>
  </div>
<% end %>
